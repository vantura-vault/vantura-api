# Server Configuration
PORT=3000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/vantura

# BrightData API
BRIGHTDATA_API_KEY=your-brightdata-api-key-here

# Redis Cache (optional - caching disabled if not set)
# For local development: redis://localhost:6379
# For Render: Use the Internal Redis URL from your Redis instance
REDIS_URL=redis://localhost:6379

# AWS S3 (optional - image proxying disabled if not set)
# Used to store profile pictures to avoid ad blocker issues with LinkedIn CDN
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=vantura-profile-images
AWS_REGION=us-east-1
